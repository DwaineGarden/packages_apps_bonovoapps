<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="25dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_keysbacklight"
        android:textColor="#00ced1"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical" >

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="38dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.bonovo.colortools.MyViewRect
                    android:id="@+id/min6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp" />

                <com.bonovo.colortools.MyViewRect
                    android:id="@+id/min7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <com.bonovo.colortools.MyViewRectMID
                android:id="@+id/mid"
                android:layout_width="129dp"
                android:layout_height="209dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <com.bonovo.colortools.MyViewRect
                    android:id="@+id/min8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp" />

                <com.bonovo.colortools.MyViewRect
                    android:id="@+id/min9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical" >

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="38dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />

            <com.bonovo.colortools.MyViewRect
                android:id="@+id/min14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/textValueR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="75dp"
                    android:textColor="#ff0000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewRmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:text="@string/seekbar_value_min"
                    android:textColor="#00ced1"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/seekBarR"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/textViewRmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/seekbar_value_max"
                    android:textColor="#00ced1"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/textValueG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="75dp"
                    android:textColor="#00ff00"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewGmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:text="@string/seekbar_value_min"
                    android:textColor="#00ced1"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/seekBarG"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textViewGmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/seekbar_value_max"
                    android:textColor="#00ced1"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/textValueB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="75dp"
                    android:textColor="#0000ff"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewBmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:text="@string/seekbar_value_min"
                    android:textColor="#00ced1"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/seekBarB"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/textViewBmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/seekbar_value_max"
                    android:textColor="#00ced1"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="225dp"
                android:text="@string/button_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
