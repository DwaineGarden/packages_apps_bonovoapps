<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/explorer_play_list_item_u"
    android:minHeight="48dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/explorer_play_list_item_margin"
        android:src="@drawable/explorer_play_list_item_image" />

    <TextView
        android:id="@+id/explorer_play_list_title"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/explorer_play_list_item_margin"
        android:layout_weight="1"
        android:background="@drawable/explorer_play_list_item_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/explorer_play_list_item_margin"
        android:textColor="@android:color/holo_orange_light" />

    <ImageButton
        android:id="@+id/explorer_play_list_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/explorer_play_list_item_add_background" />

    <ImageButton
        android:id="@+id/explorer_play_list_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/explorer_play_list_delete" />
</LinearLayout>