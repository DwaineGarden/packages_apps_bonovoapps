<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bonovo.soundbalance"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.bonovo.soundbalance.SoundBalanceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bonovo.soundbalance.GeneralActivity"
            android:label="@string/title_activity_sound_balance" >
        </activity>
        <activity
            android:name="com.bonovo.soundbalance.SonataActivity"
            android:label="@string/title_activity_sonata" >
        </activity>
        
        <receiver 
            android:name="com.bonovo.soundbalance.SonataActivity$S8VolumeBalanceRecevier">
            <intent-filter >
                <action android:name="request_s8_info"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
